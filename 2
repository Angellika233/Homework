
package homework2.classes;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.println("Podaj liczbę: ");
        
        String a = scanner.nextLine();
        
        if (a == null || a.length() == 0) {
        System.out.println("Musisz podać liczbę! ");
        } else {
            try {
                int aInt = Integer.parseInt(a);
                 }
            } catch (NumberFormatException e) {
            System.out.println("Podana wartość jest nieprawidłowa! ");
            }

        System.out.println("Podaj liczbę: ");
        
        String b=scanner.nextLine();
        
         if (b == null || b.length() == 0) {
        System.out.println("Musisz podać liczbę! ");
        } else {
            try {
                int bInt = Integer.parseInt(b);
                 }
            } catch (NumberFormatException e) {
            System.out.println("Podana wartość jest nieprawidłowa! ");
            }

       dzielenie(aInt, bInt);
       mnozenie(aInt, bInt);
    }
        private static void dzielenie(int a, int b) {
            int wynik;
            if (b < 5){
                wynik = a / b;
                System.out.println("Iloraz liczb: " + wynik);
            }
        }
        private static void mnozenie(int c, int d) {
            int wynik=0;
             if(d>=5) {
                wynik = c * d;
                System.out.println("Iloczyn liczb: " + wynik);
            }
        }
}
